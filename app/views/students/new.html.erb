<h1>Student Form </h1>

<%= form_tag students_path do %>
  <label>Student's First Name:</label><br>
  <%= text_field_tag :'student[first_name]' %><br>
  
  <label>Student's Last Name:</label><br>
  <%= text_field_tag :'student[last_name]' %><br>
  
  <%= submit_tag 'Submit Student' %><br>

<% end %>


<form action="<%= students_path %>" method="POST">
  
  <label>Student First Name:</label><br>
  <input id="first_name" type="text" name="student[first_name]"><br>
  
  <label>Student Last Name:</label><br>
  <input id="last_name" type="text" name="student[last_name]"><br>
  
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  
  <input type="submit" value="Submit Student">
   
</form>